<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="church_attendance_template">
            <t t-call="web.external_layout">
                <t t-foreach="doc" t-as="docs">
                    <div class="page">
                        <h2 class="text-center" style="text-transform:uppercase">ATTENDANCE REPORT</h2>
                        <h5 class="text-center" style="text-transform:uppercase">
                            <u><span t-field="docs.name"/></u>
                        </h5>
                        <t t-set="male_total" t-value="0.0"/>
                        <t t-set="female_total" t-value="0.0"/>
                        <t t-set="children_total" t-value="0.0"/>
                        <t t-set="guest_total" t-value="0.0"/>
                        <t t-set="total" t-value="0.0"/>
                        <table class="table">
                            <thead>
                                <tr class="row" >
                                    <th width="150px" margin-left="150px">Date</th>
                                    <th width="150px">Church Section</th>
                                    <th width="150px">Male</th>
                                    <th width="150px">Female</th>
                                    <th width="150px">Children</th>
                                    <th width="150px">Guest</th>
                                    <th width="150px">Total</th>
                                </tr>
                            </thead>
                            <tbody class='sale_tbody'>
                                <t t-foreach="attendance_lines" t-as="line">
                                    <tr class="row">
                                        <td width="130px">
                                            <t t-if="line.attendance_id.date">
                                                <span t-field="line.attendance_id.date"/>
                                            </t>
                                        </td>
                                        <td width="130px">
                                            <t t-if="line.section_id">
                                                <span t-field="line.section_id"/>
                                            </t>
                                        </td>
                                        <td width="130px">
                                            <t t-if="line.male">
                                                <span t-field="line.male"/>
                                                <t t-set="male_total" t-value="male_total + line.male"/>
                                            </t>
                                            <span t-if="not line.male">
                                                <t t-esc="0.0"/>
                                            </span>
                                        </td>
                                        <td width="130px">
                                            <t t-if="line.female">
                                                <span t-field="line.female"/>
                                                <t t-set="female_total" t-value="female_total + line.female"/>
                                            </t>
                                            <span t-if="not line.female">
                                                <t t-esc="0.0"/>
                                            </span>
                                        </td>
                                        <td width="130px">
                                            <t t-if="line.children">
                                                <span t-field="line.children"/>
                                                <t t-set="children_total" t-value="children_total + line.children"/>
                                            </t>
                                            <span t-if="not line.children">
                                                <t t-esc="0.0"/>
                                            </span>
                                        </td>
                                        <td width="130px">
                                            <t t-if="line.guest">
                                                <span t-field="line.guest"/>
                                                <t t-set="guest_total" t-value="guest_total + line.guest"/>
                                            </t>
                                            <span t-if="not line.guest">
                                                <t t-esc="0.0"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span t-esc="line.total"/>
                                            <t t-set="total" t-value="total + line.total"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr class="row">
                                    <td width="130px"></td>
                                    <td width="130px">Total</td>
                                    <td width="130px"><span t-esc="male_total"/></td>
                                    <td width="130px"><span t-esc="female_total"/></td>
                                    <td width="130px"><span t-esc="children_total"/></td>
                                    <td width="130px"><span t-esc="guest_total"/></td>
                                    <td><span t-esc="total"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
        <template id="church_attendance_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="ng_church.church_attendance_template"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
