<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="church_pledges_report_template">
            <t t-call="web.external_layout">
                <t t-foreach="doc" t-as="docs">
                    <div class="page">
                        <h2 class="text-center" style="text-transform:uppercase">Pledge Payment REPORT</h2>
                        <h5 class="text-center" style="text-transform:uppercase">
                            <u><span t-field="docs.name.name"/></u>
                        </h5>
                        <table class="table" style="width:100%;">
                            <thead>
                                <tr class="row">
                                    <th width="150px" margin-left="150px">Name</th>
                                    <th width="150px">Pledger</th>
                                    <th width="150px">Pledge Amount</th>
                                    <th width="150px">Amount Paid</th>
                                    <th width="150px">Total Balance</th>
                                </tr>
                            </thead>
                            <tbody class='sale_tbody'>
                                <t t-foreach="pledge_lines" t-as="line">
                                    <tr class="row">
                                        <td width="150px" margin-left="150px"><span t-field="line.name"/></td>
                                        <td width="150px"><span t-esc="line.pledger.name"/></td>
                                        <td width="150px"><span t-esc="line.amount"/></td>
                                        <td width="150px"><span t-field="line.paid"/></td>
                                        <td width="150px"><span t-field="line.balance"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
        <template id="church_pledges_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="ng_church.church_pledges_report_template"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
