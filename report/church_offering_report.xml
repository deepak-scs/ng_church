<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="church_offering_report_template">
            <t t-call="web.external_layout">
                <t t-foreach="doc" t-as="docs">
                    <div class="page">
                        <h2 class="text-center" style="text-transform:uppercase">Offering REPORT</h2>
                        <h5 class="text-center" style="text-transform:uppercase">
                            <u><span t-field="docs.name"/></u>
                        </h5>
                        <table class="table" style="width:100%;">
                            <thead>
                                <tr class="row">
                                   <th width="150px" margin-left="150px">Date</th>
                                   <th width="150px">Name</th>
                                   <th width="150px">Section</th>
                                   <th width="150px">Amount</th>
                               </tr>
                            </thead>
                            <t t-set="total" t-value="0.0"/>
                            <tbody class='sale_tbody'>
                                <t t-foreach="offering_lines" t-as="line">
                                    <t t-set="total" t-value="total + line.amount"/>
                                    <tr class="row">
                                        <td width="150px" margin-left="150px"><span t-field="line.date"/></td>
                                        <td width="150px"><span t-field="line.offeror_id"/></td>
                                        <td width="150px"><span t-field="line.offering_id.section_id"/></td>
                                        <td width="150px"><span t-field="line.amount" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/></td>
                                    </tr>
                                </t>
                                <tr class="row">
                                    <td width="150px" margin-left="150px"></td>
                                    <td width="150px"></td>
                                    <td width="150px"><b>Total</b></td>
                                    <td width="150px"><b t-esc="total" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
        <template id="church_offering_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="ng_church.church_offering_report_template"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
