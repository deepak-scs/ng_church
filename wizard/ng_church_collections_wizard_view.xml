<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ng_church_pledge_wizard" model="ir.ui.view">
            <field name="name">church.pledge.wizard</field>
            <field name="model">ng_church.pledge_wizard</field>
            <field name="arch" type="xml">
                <form string="Church Pledges">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="pledge"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
	                <footer>
                        <button name="print_pledge_report" string="Print" type="object" class="oe_highlight"/>
	                    or <button special="cancel" string="Cancel" class="oe_link"/>
	                </footer>
                </form>
            </field>
        </record>

        <record id="ng_church_attendance_wizard" model="ir.ui.view">
            <field name="name">ng_church_attendance_wizard</field>
            <field name="model">ng_church.attendance_wizard</field>
            <field name="arch" type="xml">
                <form string="Church Pledges">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                        <group>
                            <field name="program_id" class="oe_center" width="100%" options='{"no_open": True, "no_create": True}'/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_attendance_report" string="Print" type="object" class="oe_highlight"/>
                       or <button special="cancel" string="Cancel" class="oe_link"/>
                   </footer>
                </form>
            </field>
        </record>

        <record id="ng_church_tithe_wizard" model="ir.ui.view">
            <field name="name">ng_church_tithe_wizard</field>
            <field name="model">ng_church.tithe_wizard</field>
            <field name="arch" type="xml">
                <form string="Church Pledges">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                        <group>
                            <field name="tithe" class="oe_center"/>
                        </group>
                    </group>
                   <footer>
                        <button name="print_tithe_report" string="Print" type="object" class="oe_highlight"/>
                       or <button special="cancel" string="Cancel" class="oe_link"/>
                   </footer>
                </form>
            </field>
        </record>

        <record id="ng_church_offering_wizard" model="ir.ui.view">
            <field name="name">ng_church_offering_wizard</field>
            <field name="model">ng_church.offering_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                        <group>
                            <field name="offering" class="oe_center"/>
                        </group>
                    </group>
                   <footer>
                        <button name="print_offering_report" string="Print" type="object" class="oe_highlight"/>
                       or <button special="cancel" string="Cancel" class="oe_link"/>
                   </footer>
                </form>
            </field>
        </record>

        <record id="ng_church_donation_wizard" model="ir.ui.view">
            <field name="name">ng_church_donation_wizard</field>
            <field name="model">ng_church.donation_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                        <group>
                            <field name="donation" class="oe_center"/>
                        </group>
                    </group>
                   <footer>
                        <button name="print_donation_report" string="Print" type="object" class="oe_highlight"/>
                       or <button special="cancel" string="Cancel" class="oe_link"/>
                   </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
